/* pages/fenlei/fenlei.wxss */
.top{
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 10;
}
.search{
  width: 92%;
  display: flex;
  background: rgb(237, 237, 237);
  border-radius: 10rpx;
  justify-items: center;
  align-items: center;
  margin: auto;
}
.search image{
  width: 25rpx;
  height: 25rpx;
  margin-left: 200rpx;
}
.search input{
  font-size: 25rpx;
  margin-left: 20rpx;
}


.left{
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 8rpx;
}
.scroll_box{
  display: flex;
}
.scroll_left{
  width: 162rpx;
  text-align: center;
  position: fixed;
  left: 0;
  top: 60rpx;
}
.scroll_right{
border-left: 1rpx solid #fafafa;
padding: 0 30rpx 0 30rpx;
width: 75%;
margin: 60rpx 0 0 162rpx;
}
.right{
  width: 100%;
  /* height: 100%; */
}
.right image{
  width: 100%;
  height: 200rpx;
  margin: 20rpx auto;
}
.right .title{
  text-align: center;
}
.right_list{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.text_top{
  width:calc(100% / 3);
}
.text_end{
   text-align: center;
   width: 100%;
   font-size: 24rpx;
}

.active{
  color: #9c3232;
  font-size: 36rpx;
  border-left: 6rpx solid #9c3232;
}