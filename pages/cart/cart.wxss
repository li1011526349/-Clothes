/* pages/cart/cart.wxss */
.cartTop{
  width: 100%;
  height: 90rpx;
  display: flex;
}
.list{
  width: calc(100% / 3);
  font-size: 26rpx;
  display: flex;
  align-items: center;
}
.radius{
  width: 10rpx;
  height: 10rpx;
  border-radius: 100%;
  background: none;
  border: 1rpx solid #9c3232;
  margin-left: 20rpx;
}
.text{
  text-align: center;
  flex: 1;
}

page{
  height: 100%;
}
.all{
  background: rgb(244, 244, 244);
  height: 100%;
}
.cartList{
  margin-bottom: 160rpx;
}
.box{
  width: 100%;
  height: 220rpx;
  background: white;
  margin-bottom: 2rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.first_img{
  background: url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/checkbox-0e09baa37e.png) no-repeat;
  background-size: 34rpx 34rpx;
  background-position-y: 45%;
  margin: 0 20rpx;
  height: 125rpx;
  width: 34rpx;
}
.left{
  display: flex;
  align-items: center;
}
.center{
  height: 125rpx;
width: 125rpx;
display: block;
background: #f4f4f4;

}
.center>image{
    width: 100%;
    height: 100%;
}
.list_text{
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
}
.right{
  position: absolute;
  right: 20rpx;
}
.first_text{
  margin-bottom: 8rpx;
  font-size: 30rpx;
}
.second_text{
  font-size: 28rpx;
}

.bottom{
  height: 160rpx;
  background: white;
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  border-top: 1px solid lightgray;
}
.img{
   background: url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/checkbox-0e09baa37e.png) no-repeat;
  background-size: 34rpx 34rpx;
  background-position-y: 45%;
  margin: 0 20rpx;
  height: 125rpx;
  width: 34rpx;
}
.bottom_center{
  flex: 1;
  display: flex;
  align-items: center;
}
.allsure{
  width: 50%;
  display: block;
}
.price{
  width: 50%;
  display: block;
  text-align: right;
  padding-right: 20rpx;
  color: red;
}
.sure{
  width: 200rpx;
  height: 100rpx;
  background: rgb(180, 40, 45);
  text-align: center;
  line-height: 100rpx;
  color: white;
}
.active{
  background:url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/checkbox-checked-822e54472a.png) no-repeat center center !important;
  background-size: 34rpx 34rpx !important;
  background-position-y: 45% !important;
  margin: 0 20rpx !important;
  height: 125rpx !important;
  width: 34rpx !important;
}
.changeall{
  background:url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/checkbox-checked-822e54472a.png) no-repeat center center !important;
  background-size: 34rpx 34rpx !important;
  background-position-y: 45% !important;
  margin: 0 20rpx !important;
  height: 125rpx !important;
  width: 34rpx !important;
}


.del{
  width: 130rpx;
  height: 220rpx;
  background: rgb(180, 40, 45);
  text-align: center;
  line-height: 220rpx;
  position: absolute;
  right: -130rpx;
  color: white;
}