/* pages/mine/mine.wxss */
.mine_top{
width: 100%;
height: 280rpx;
display: flex;
align-items: center;
background: #333;
padding: 0 30rpx;
box-sizing: border-box;
}
._img{
  height: 148rpx;
width: 148rpx;
border-radius: 50%;
}
.name{
  display: flex;
  flex-direction: column;
  color: white;
  margin-left: 30rpx;
}
.name>text{
  margin-bottom: 15rpx;
}
.center{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.center>view{
  width: 33%;
  text-align: center;
  height: 150rpx;
  line-height: 150rpx;
}
