/* pages/stail/stail.wxss */
.lb{
  height: 750rpx;
}
.lb swiper{
  height: 100%;
}
.lb image{
  width: 100%;
  height: 100%;
}

.list{
  width: 100%;
  height: 60rpx;
  background: lightgray;
  display: flex;
}
.list>view{
  width: calc(100%/3);
  text-align: center;
  display: flex;
  align-items: center;
}
.list>view .radius{
  width: 15rpx;
  height:15rpx;
  border-radius: 100%;
  border: 2rpx solid red;
  margin: 0 20rpx;
}
.list>view view{
  font-size: 25rpx;
}

.show{
  width: 100%;
}
.show>view{
  text-align: center;
  width: 100%;
  margin: 20rpx;
}
.name{
  font-size: 40rpx;
}
.goods{
  color: gray;
  font-size: 30rpx;
}
.price{
  color: #9e3232;
}

.bottom{
  width: 100%;
  height: 100rpx;
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  background: white;
  z-index: 100;
}
.bottom .star{
  width: 20%;
  height: 100rpx;
  border: 1px solid lightgray;
  background: url(data:image/png;base64,)center no-repeat;
  background-size: 50rpx;
  background-position-y: 50%;
}
.car{
  width: 25%;
  height: 100%;
  position: relative;
  border: 1rpx solid lightgray;
}
.car image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -25rpx;
  margin-top: -25rpx;
}
.now{
  width: 25%;
  border: 1rpx solid lightgray;
  text-align: center;
  line-height: 100rpx;
  font-size: 26rpx;
}

.join{
  width: 30%;
  border: 1rpx solid lightgray;
  text-align: center;
  line-height: 100rpx;
  background: #9e3232;
  color: white;
}
.choose{
  width: 100%;
  height: 80rpx;
  border-top: 1rpx solid lightgray;
  display: flex;
  align-items: center;
  margin-top: 50rpx;
}
.choose>text{
  width: 50%;
  text-align: center;
}
